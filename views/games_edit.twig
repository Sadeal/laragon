{% extends "__layout.twig" %} {% block content %}
<div class="container">
  <h1>Добавление игры</h1>
  <hr />

  {% if message %}
  <div class="alert alert-info">
    {{ message }}
    <a href="/games/{{ id }}">Открыть игру</a>
  </div>
  {% endif %}

  <form enctype="multipart/form-data" method="POST" class="row g-3">
    <div class="col-6">
      <label class="form-label">Название на английском</label>
      <input
        type="text"
        class="form-control"
        name="title"
        value="{{ title }}"
      />
    </div>
    <div class="col-6">
      <label class="form-label">Название на русском</label>
      <input
        type="text"
        class="form-control"
        name="ruName"
        value="{{ ruName }}"
      />
    </div>
    <div class="col-6">
      <label class="form-label">Тип на русском</label>
      <select class="form-control" name="typeRu">
        {% for type in allTypes %}
        <option value="{{ type.typeRu }}">{{ type.typeRu }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="col-6">
      <label class="form-label">Тип на английском</label>
      <select class="form-control" name="type">
        {% for type1 in allTypes %}
        <option value="{{ type1.type }}">{{ type1.type }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="col-12">
      <label class="form-label">Картинка</label>
      <input
        class="form-control"
        type="file"
        id="formFile"
        name="image"
        value="{{ image }}"
      />
    </div>
    <div class="col-12">
      <textarea
        name="info"
        placeholder="Полное описание..."
        class="form-control"
        rows="5"
        value="{{ info }}"
      ></textarea>
    </div>
    <div class="col-12 text-end">
      <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
  </form>
</div>

{% endblock %}
